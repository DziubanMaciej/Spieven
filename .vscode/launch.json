{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "serve",
                "-t"
            ]
        },

        {
            "name": "Frontend schedule",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
               "schedule",
               "bash",
               "${workspaceFolder}/test_script.sh"
           ],
            "program": "${workspaceFolder}",
        },

        {
            "name": "Frontend list",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
               "list"
           ],
            "program": "${workspaceFolder}",
        },

        {
            "name": "watchxorg",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "watchxorg",
               ":16"
           ],
            "program": "${workspaceFolder}",
        },

        {
            "name": "help",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                 "list",
                "--help",
           ],
            "program": "${workspaceFolder}",
        },
    ]
}
